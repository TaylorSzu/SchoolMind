<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - School_Mind</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/School_Mind.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" />
    @RenderSection("styles", required: false)
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark py-2">
            <div class="container-fluid">
                <!-- Logo -->
                <a class="navbar-brand d-flex align-items-center" href="#">
                    <div class="logo-square bg-light rounded-circle me-2" style="width: 40px; height: 40px;"></div>
                    <span class="fw-bold text-white">SchoolMind</span>
                </a>

                <!-- Itens do menu -->
                <div class="collapse navbar-collapse justify-content-center">
                    <ul class="navbar-nav">
                        <!-- Dropdown Turmas -->
                        <li class="nav-item dropdown mx-3">
                            <a class="nav-link dropdown-toggle text-light d-flex align-items-center" href="#" id="turmasDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-people-fill me-2"></i> Turmas
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="turmasDropdown">
                                <li><a class="dropdown-item" href="#">➕ Criar Turma</a></li>
                                <li><a class="dropdown-item" href="#">⚙️ Gerenciar Turmas</a></li>
                            </ul>
                        </li>

                        <!-- Dropdown Material Didático -->
                        <li class="nav-item dropdown mx-3">
                            <a class="nav-link dropdown-toggle text-light d-flex align-items-center" href="#" id="materialDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-book-fill me-2"></i> Material Didático
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="materialDropdown">
                                <li><a class="dropdown-item" href="#">📤 Postar Material</a></li>
                                <li><a class="dropdown-item" href="#">⚙️ Gerenciar Material</a></li>
                            </ul>
                        </li>

                        <!-- Dropdown Calendário -->
                        <li class="nav-item dropdown mx-3">
                            <a class="nav-link dropdown-toggle text-light d-flex align-items-center" href="#" id="calendarioDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-calendar2-week-fill me-2"></i> Calendário
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="calendarioDropdown">
                                <li><a class="dropdown-item" href="#">📅 Criar Nova Turma</a></li>
                                <li><a class="dropdown-item" href="#">⚙️ Gerenciar Turmas</a></li>
                            </ul>
                        </li>

                        <!-- Dropdown Lista de Chamada -->
                        <li class="nav-item dropdown mx-3">
                            <a class="nav-link dropdown-toggle text-light d-flex align-items-center" href="#" id="chamadaDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-list-check me-2"></i> Lista de Chamada
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="chamadaDropdown">
                                <li><a class="dropdown-item" href="#">📝 Registrar Chamada</a></li>
                                <li><a class="dropdown-item" href="#">⚙️ Gerenciar Chamada</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>

                <!-- Perfil do usuário -->
                <div class="d-flex align-items-center">
                    <div class="bg-light rounded-circle" style="width: 40px; height: 40px;"></div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - School_Mind - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
